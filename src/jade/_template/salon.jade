-
    var salonTitle = "AKENORI органично </br> сливается с интерьером </br> салона и не привлекает </br> к себе лишнее внимание";

    var salonSubTitle = "Больше никаких громоздких устройств </br> на лобовом стекле! "


.salon

    p.salon__title.big__title!= "Создан специально"


    +mainTitle("white salon__hide", salonTitle)


    .row
        .row__left.row__left-half
        .row__right.row__right-half
            .owl-carousel.salon__carousel
                - for(var i = 0; i < 3; i++)
                    .salon__carousel-item
                        img(
                            src="./img/img-salon-" + i + ".jpg"
                            alt=""
                            title=""
                            class="salon__carousel-img img_centered"
                        )


    .container-fluid.clearfix
        .salon__row.clearfix

            +mainTitle("white", salonTitle)

            .salon__wrap.clearfix

                p.salon__sub-title!= salonSubTitle

                a(
                    href="javascript:void(0);"
                    title="buy"
                    class="salon__btn btn-buy btn"
                )
                    | купить
                    i.btn-icon

    img(
        src="./img/img-shadow.png"
        title=""
        alt=""
        class="img-shadow img_responsive"
    )